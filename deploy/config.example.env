# Local deployment configuration (copy to deploy/config.env and edit)

# SSH connection
DEPLOY_HOST=172.237.148.25
DEPLOY_USER=root
SSH_KEY="$HOME/.ssh/linode_host_key"

# Remote application directory
REMOTE_DIR=/opt/hoa-management

# Domain (used for verification requests)
DOMAIN=sandersoncreekhoa.com

# Container images to deploy
BACKEND_IMAGE=ghcr.io/karolswdev/hoa-backend:latest
FRONTEND_IMAGE=ghcr.io/karolswdev/hoa-frontend:latest

# Build options
BUILD_NO_CACHE=false
RUN_MIGRATIONS=true

# Docker compose file on remote (relative to REMOTE_DIR)
COMPOSE_FILE=docker-compose.yml
